# ===========================================
# 애플리케이션 기본 설정
# ===========================================
APP_NAME=Libera App
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# ===========================================
# 서버 설정
# ===========================================
HOST=0.0.0.0
PORT=8000

# ===========================================
# 데이터베이스 설정 (필수)
# ===========================================
# PostgreSQL 예제
DATABASE_URL=postgresql://username:password@localhost:5432/libera_db
# SQLite 예제 (개발용)
# DATABASE_URL=sqlite:///./libera_app.db

# ===========================================
# 보안 설정 (필수 - 운영환경에서는 반드시 변경)
# ===========================================
SECRET_KEY=your-very-secure-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# CORS 설정
# ===========================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true

# ===========================================
# 파일 처리 설정
# ===========================================
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=["pdf"]

# ===========================================
# AI 서비스 설정
# ===========================================
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# ===========================================
# 로깅 설정
# ===========================================
LOG_LEVEL=INFO 